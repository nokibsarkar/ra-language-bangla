{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": "src",
      "skipLibCheck": true,
      "strict": true,
      "target": "ES5"
    },
    "exclude": [
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/*.spec.js",
      "node_modules"
    ],
    "include": [
      "src"
    ]
  }